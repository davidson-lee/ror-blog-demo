<h1>Ruby on Rails Blog</h1>
<hr>
<h2>Posts</h2>
<% @posts.each do |post| %>
    <div class="card" style="margin: 1.5rem 0; background: rgb(230,230,230)">
        <div class="card-body">
            <h4 class="card-title"><%= post.title %></h4>
            <p class="card-text"><%= post.body %><p>
            <%= link_to "Read More", post_path(post), :class => 'btn btn-primary' %>
        </div>
    </div>
<% end %>